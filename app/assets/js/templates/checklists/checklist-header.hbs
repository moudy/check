<header class='checklist-header'>
  <div class='content-width'>
    <div class='media'>
      {{#link-to 'users.show' user class='avatar-large media-left'}}
        <img {{bind-attr src='user.profileImageUrl'}} {{bind-attr alt='user.username'}} />
      {{/link-to}}

      <div class='media-body'>
        <h1 class='checklists-show-title editable-field' {{action 'edit' 'title' target=view}}>
          {{#if title}}
            {{title}}&nbsp;
          {{else}}
            <span class='add-description-prompt'>Add a Title...</span>
          {{/if}}

          {{#if isEditingTitle}}
            {{view App.TextField valueBinding='title' placeholder='List title' property='title' focusOnInsert=true}}
          {{/if}}
        </h1>
        <div class='checklist-meta subtitle'>
          by
          {{#link-to 'users.show' user}}
            {{user.username}}
          {{/link-to}}
          {{#if countSummary}}
            &middot; {{countSummary}}
          {{/if}}
        </div>
      </div>
    </div>

    {{#if showDescription}}
      {{#view App.ChecklistDescriptionView}}
        {{#if description}}
          {{autolink description target='_blank'}}&nbsp;
        {{else}}
          <span class='add-description-prompt'>Add a description...</span>
        {{/if}}

        {{#if isEditingDescription}}
          {{view App.TextArea valueBinding='description' property='description' focusOnInsert=true}}
        {{/if}}
      {{/view}}
    {{/if}}

  </div>
</header>
