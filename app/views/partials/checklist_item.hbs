<div class='checklist-item-checkmark'>&#10004;</div>

<h2 class='checklist-item-title editable-title'>
  {{title}}
  {{#if isEditing}}
    {{view App.TextField valueBinding='title'}}
  {{/if}}
</h2>

{{#if description}}
<p class='checklist-item-description editable-body'>
  {{description}}
  {{#if isEditing}}
    {{view App.TextArea valueBinding='description'}}
  {{/if}}
</p>
{{/if}}

