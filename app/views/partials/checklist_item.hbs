
<h2 class='checklist-list-item-title editable-title'>
  <div class='checklist-list-item-checkmark'>&#10004;</div>
  {{title}}
  {{#if isEditing}}
    {{view App.TextField valueBinding='title'}}
  {{/if}}
</h2>

{{#if isEditing}}
<a href='#' {{action 'deleteItem' target='view'}} class='button-bare-danger delete-item right'>&#x2715;</a>
{{/if}}

{{#if showDescription}}
<p class='checklist-list-item-description editable-body'>
  {{description}}
  {{#if isEditing}}
    {{view App.TextArea valueBinding='description'}}
  {{/if}}
</p>
{{/if}}


{{#if isEditing}}
{{! <span href='#' class='button-item-reorder'></span> }}
{{/if}}
