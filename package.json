{
  "name": "application-name",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start-dev": "npm run watch & supervisor app.js",
    "start": "forever app.js",
    "watch": "watchy -w app/views/partials -- npm run built-templates",
    "build-templates": "ember-precompile app/views/partials/*.hbs > app/assets/js/templates.js",
    "build-js": "npm run build-templates && browserify app/assets/js/app.js | uglifyjs -mc > public/app.js",
    "build-css": "mkdir -p tmp && node-sass app/assets/css/app.scss tmp/app.css && cleancss tmp/app.css > public/app.css",
    "postinstall": "npm run build-js & npm run build-css"
  },
  "dependencies": {
    "express": "3.4.4",
    "jade": "*",
    "express3-handlebars": "~0.5.0",
    "node-sass": "~0.8.0",
    "clean-css": "~2.0.6",
    "uglify-js": "~2.4.8",
    "browserify": "~3.19.1",
    "require-directory": "~1.2.0",
    "browserify-shim": "~3.1.4",
    "handlebars": "~1.3.0",
    "ember-precompile": "~0.2.4"
  },
  "devDependencies": {
    "node-pow": "0.0.2",
    "browserify-middleware": "~2.2.0"
  },
  "engines": {
    "node": "0.10.x",
    "npm": "1.3.x"
  },
  "browser": {
    "jquery": "./app/assets/js/vendor/jquery.js",
    "fastClick": "./app/assets/js/vendor/fastclick.js",
    "Ember": "./app/assets/js/vendor/ember.js"
  },
  "browserify-shim": {
    "jquery": {
      "exports": "$"
    },
    "fastClick": {
      "exports": "FastClick"
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
}
